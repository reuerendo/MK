<Window x:Class="MiniKeyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                Padding="10" CornerRadius="5,5,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Mini Keyboard" 
                          VerticalAlignment="Center" FontWeight="SemiBold"/>
                
                <ToggleButton x:Name="LockToggleButton" Grid.Column="1" 
                             Content="ðŸ”’" Width="30" Height="30" Margin="5,0"
                             ToolTipService.ToolTip="Lock position"/>
                
                <Button x:Name="SettingsButton" Grid.Column="2" 
                       Content="âš™" Width="30" Height="30"
                       Click="SettingsButton_Click"
                       ToolTipService.ToolTip="Settings"/>
            </Grid>
        </Border>
        
        <!-- Main content with buttons -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ButtonsContainer" Margin="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VariableSizedWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="6"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource KeyButtonStyle}" 
                               Content="{Binding DisplayText}"
                               Tag="{Binding}"
                               Click="KeyButton_Click"
                               RightTapped="KeyButton_RightTapped"
                               Margin="2">
                            <Button.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Edit" Click="EditButton_Click"/>
                                    <MenuFlyoutItem Text="Delete" Click="DeleteButton_Click"/>
                                </MenuFlyout>
                            </Button.ContextFlyout>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                Padding="10" CornerRadius="0,0,5,5">
            <Button x:Name="AddButtonButton" Content="+" 
                   HorizontalAlignment="Center" Width="40" Height="30"
                   Click="AddButton_Click"
                   ToolTipService.ToolTip="Add new button"/>
        </Border>
    </Grid>
</Window>