<ContentDialog x:Class="MiniKeyboard.SettingsDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               Title="Settings"
               PrimaryButtonText="Save"
               SecondaryButtonText="Cancel"
               DefaultButton="Primary">
    
    <StackPanel Spacing="20" MinWidth="350">
        <ToggleSwitch x:Name="AlwaysOnTopToggle" 
                      Header="Always on top" 
                      IsOn="True"/>
        
        <StackPanel>
            <TextBlock Text="Window Opacity" Margin="0,0,0,5"/>
            <Slider x:Name="OpacitySlider" 
                    Minimum="0.3" Maximum="1.0" Value="1.0" 
                    StepFrequency="0.1"/>
        </StackPanel>
        
        <StackPanel>
            <TextBlock Text="Button Size" Margin="0,0,0,5"/>
            <ComboBox x:Name="ButtonSizeComboBox" SelectedIndex="1">
                <ComboBoxItem Content="Small" Tag="Small"/>
                <ComboBoxItem Content="Medium" Tag="Medium"/>
                <ComboBoxItem Content="Large" Tag="Large"/>
            </ComboBox>
        </StackPanel>
        
        <StackPanel>
            <TextBlock Text="Theme" Margin="0,0,0,5"/>
            <ComboBox x:Name="ThemeComboBox" SelectedIndex="0">
                <ComboBoxItem Content="Default" Tag="Default"/>
                <ComboBoxItem Content="Dark" Tag="Dark"/>
                <ComboBoxItem Content="Light" Tag="Light"/>
            </ComboBox>
        </StackPanel>
        
        <ToggleSwitch x:Name="StartWithWindowsToggle" 
                      Header="Start with Windows"/>
        
        <ToggleSwitch x:Name="MinimizeToTrayToggle" 
                      Header="Minimize to system tray"/>
    </StackPanel>
</ContentDialog>